<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.


    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light.NoActionBar">        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here
        -->



    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="CustomActionBarTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarSize">45dp</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:icon">@color/color_transparent</item>
        <item name="android:title"></item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>
    <!-- style for the action bar backgrounds -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/color_system_button</item>
    </style>
    <style name="Spinner" parent="@android:style/Widget.ListView.DropDown">
        <item name="android:background">@color/color_transparent</item>
        <item name="android:minWidth">100dp</item>
    </style>
    <style name="PoppupMenu" parent="@android:style/Widget.Holo.PopupMenu">
        <item name="android:popupBackground">@color/color_system_button</item>
        <item name="android:background">@color/color_system_button</item>
        <item name="android:childIndicator">@color/color_system_button</item>
        <item name="android:shadowColor">@color/color_transparent</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">0</item>
    </style>
    <!-- Transparent dialog -->
    <style name="TransparentProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    
    <style name="progress_bar">
        <item name="android:indeterminateDrawable">@drawable/progress_bar_clip_inverted</item>
    </style>
    
    <style name="ListView">
        <item name="android:listSelector">@drawable/bg_listview_item_gray</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
    </style>
    
    <style name="ScrollView">
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
        <item name="android:isScrollContainer">false</item>
    </style>
    
    <style name="RadioButton">
        <item name="android:textSize">11sp</item>
    </style>
    
</resources>