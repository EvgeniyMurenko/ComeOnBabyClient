<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_body"
    android:orientation="vertical" >

    <com.comeonbabys.android.app.view.customview.ButtonCustom
        android:id="@+id/btnConfirmYes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:background="@drawable/bg_button_bottom_selection"
        android:gravity="center"
        android:text="@string/text_edit_my_success"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/color_white"
        android:textStyle="bold" />

    <com.comeonbabys.android.app.view.customview.ButtonCustom
        android:id="@+id/btnConfirmNo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:background="@drawable/bg_button_delete_selection"
        android:gravity="center"
        android:text="@string/text_delete_my_success"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/color_delete"
        android:textStyle="bold" />

</LinearLayout>