<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutRootDate"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/color_white"
        android:gravity="center"
        android:orientation="horizontal" >
        <com.comeonbabys.android.app.view.customview.TextViewCustom
            android:id="@+id/txtClose"
            android:layout_width="@dimen/height_editext"
            android:layout_height="@dimen/height_editext"
            android:background="@drawable/bg_button_x"
            android:gravity="center"
            android:minHeight="@dimen/height_editext"
            android:padding="10dp"
            android:maxLines="1"
            android:text="@string/text_x"
            android:textColor="@color/color_white" 
            />
        <com.comeonbabys.android.app.view.customview.TextViewCustom
            android:id="@+id/txtTitle"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_editext"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:minHeight="@dimen/height_editext"
            android:padding="5dp"
            android:text="@string/text_profile_config_ngaycuoi"
            android:textColor="@color/color_black" 
            />
        <com.comeonbabys.android.app.view.customview.TextViewCustom
            android:id="@+id/txtConfirm"
            android:layout_width="@dimen/height_editext"
            android:layout_height="@dimen/height_editext"
            android:background="@drawable/bg_button"
            android:gravity="center"
            android:minHeight="@dimen/height_editext"
            android:maxLines="1"
            android:text="@string/text_confirm"
            android:textColor="@color/color_white" 
            />
    </LinearLayout>
    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_gray"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/color_white"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="horizontal" >

        <NumberPicker
            android:id="@+id/picker_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </NumberPicker>

        <com.comeonbabys.android.app.view.customview.TextViewCustom
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_editext"
            android:background="@android:color/transparent"
            android:gravity="start|center_vertical"
            android:minHeight="@dimen/height_editext"
            android:padding="5dp"
            android:maxLines="1"
            android:text="@string/text_year"
            android:textColor="@color/color_black" />

        <NumberPicker
            android:id="@+id/picker_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </NumberPicker>

        <com.comeonbabys.android.app.view.customview.TextViewCustom
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_editext"
            android:background="@android:color/transparent"
            android:gravity="start|center_vertical"
            android:minHeight="@dimen/height_editext"
            android:padding="5dp"
            android:maxLines="1"
            android:text="@string/text_month"
            android:textColor="@color/color_black" />

        <NumberPicker
            android:id="@+id/picker_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </NumberPicker>

        <com.comeonbabys.android.app.view.customview.TextViewCustom
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_editext"
            android:background="@android:color/transparent"
            android:gravity="start|center_vertical"
            android:minHeight="@dimen/height_editext"
            android:padding="5dp"
            android:maxLines="1"
            android:text="@string/text_day"
            android:textColor="@color/color_black" />
    </LinearLayout>

</LinearLayout>