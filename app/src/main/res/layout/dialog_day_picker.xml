<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutRootDay"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/color_white"
        android:gravity="center"
        android:orientation="horizontal" >

        <com.comeonbaby.android.app.view.customview.TextViewCustom
            android:id="@+id/txtClose"
            android:layout_width="@dimen/height_editext"
            android:layout_height="@dimen/height_editext"
            android:background="@drawable/bg_button_x"
            android:gravity="center"
            android:minHeight="@dimen/height_editext"
            android:padding="10dp"
            android:maxLines="1"
            android:text="@string/text_x"
            android:textColor="@color/color_white" />

        <com.comeonbaby.android.app.view.customview.TextViewCustom
            android:id="@+id/txtTitle"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_editext"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:minHeight="@dimen/height_editext"
            android:padding="5dp"
            android:maxLines="1"
            android:text="@string/text_profile_config_nguyetsan"
            android:textColor="@color/color_black" />

        <com.comeonbaby.android.app.view.customview.TextViewCustom
            android:id="@+id/txtConfirm"
            android:layout_width="@dimen/height_editext"
            android:layout_height="@dimen/height_editext"
            android:background="@drawable/bg_button"
            android:gravity="center"
            android:minHeight="@dimen/height_editext"
            android:maxLines="1"
            android:text="@string/text_confirm"
            android:textColor="@color/color_white" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/color_white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp" >

        <NumberPicker
            android:id="@+id/picker_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >
        </NumberPicker>

        <com.comeonbaby.android.app.view.customview.TextViewCustom
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_editext"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/picker_day"
            android:layout_toRightOf="@+id/picker_day"
            android:background="@android:color/transparent"
            android:gravity="start|center_vertical"
            android:minHeight="@dimen/height_editext"
            android:padding="10dp"
            android:maxLines="1"
            android:text="@string/text_day"
            android:textColor="@color/color_black" />
    </RelativeLayout>

</LinearLayout>